// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Catppuccin Frapp√©",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  // "buffer_font_family": "IosevkaCustom Nerd Font",
  "ui_font_size": 14,
  "ui_font_family": "JetBrainsMonoNL Nerd Font Mono",
  // "ui_font_family": "IosevkaCustom Nerd Font",
  "theme": "Xcode Classic Dark",
  "projects_online_by_default": false,
  "vim_mode": true,
  "cursor_blink": false,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  "languages": {
    "JSON": {
      "format_on_save": "on"
    },
    "TypeScript": {
      "format_on_save": "on"
    },
    "JavaScript": {
      "format_on_save": "on"
    },
    "TSX": {
      "format_on_save": "on"
    }
  }
}
